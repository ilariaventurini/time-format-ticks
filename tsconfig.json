{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext", "dom", "dom.iterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "declaration": true,
    "allowJs": false,
    "sourceMap": true,
    "typeRoots": ["typings", "node_modules/@types"],
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "typings", "**/tests/*"]
}
